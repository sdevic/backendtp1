<h2 style="color:crimson;">Lista</h2>

<% if(productos.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Producto</th> <th>Imagen</th> <th>Precio</th> </tr>
            <% for (const producto of productos) {%>
            <tr>
                <td><%=producto.nombre%></td>
                <td><img style="width:80px;height:80px"alt="sin imagen"src="<%=producto.imagen%>"></td>
                <td>$<%=producto.precio%></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">no se encontraron datos</h3>
<% } %>